{
  "manifest_version": 3,
  "name": "Clear Recipes",
  "description": "Send any recipe to Clear Recipes for step-by-step viewing",
  "version": "1.0",
  "permissions": ["activeTab"],
  "action": {
    "default_title": "Open in Clear Recipes",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
